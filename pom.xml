    <modelVersion>4.0.0</modelVersion>

    <groupId>com.stratio</groupId>
    <artifactId>meta</artifactId>
    <packaging>pom</packaging>
    <version>0.0.4-SNAPSHOT</version>
    <modules>
        <module>meta-core</module>
        <module>meta-common</module>
        <module>meta-driver</module>
        <module>meta-server</module>
        <module>meta-sh</module>
        <module>meta-deep</module>
        <module>meta-dist</module>
    </modules>
    <properties>
        <akka.version>2.2.4</akka.version>
        <cassandra.driver>2.0.0</cassandra.driver>
        <meta.version>0.0.4-SNAPSHOT</meta.version>
        <deep.version>0.2.1</deep.version>
        <!--scoverage-plugin.version>0.98.2</scoverage-plugin.version>
        <scala.major>2.10</scala.major>
        <scala.version>2.10.3</scala.version-->
        <coverage.data.dir>${project.build.outputDirectory}</coverage.data.dir>
    </properties>
    <repositories>
        <repository>
            <id>scala-tools.org</id>
            <name>Scala-tools Maven2 Repository</name>
            <url>http://scala-tools.org/repo-releases</url>
        </repository>
        <repository>
            <id>typesafe.com</id>
            <name>Typesafe Repository</name>
            <url>http://repo.typesafe.com/typesafe/releases/</url>
        </repository>
    </repositories>


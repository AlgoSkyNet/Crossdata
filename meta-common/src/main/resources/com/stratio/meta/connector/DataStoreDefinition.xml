<DataStore>
    <Name>Cassandra</Name>
    <Version>2.0.0</Version>
    <RequiredProperties>
        <Property>
            <PropertyName>Hosts</PropertyName>
            <Description>Host list with its own port. Example: [host1,host2,host3]</Description>
        </Property>
        <Property>
            <PropertyName>Port</PropertyName>
            <Description>Cassandra Port</Description>
        </Property>
    </RequiredProperties>
    <OptionalProperties>
        <Property>
            <PropertyName>Limit</PropertyName>
            <Description>1000</Description>
        </Property>
        <Property>
            <PropertyName>Level</PropertyName>
            <Description>WARN</Description>
        </Property>
    </OptionalProperties>
    <Behaviors>
        <Behavior>UPSERT_ON_INSERT</Behavior>
        <Behavior>FAKE_BEHAVIOR</Behavior>
    </Behaviors>
</DataStore>
